{
  "manifest_version": 3,
  "name": "Shorts Blocker (Org Edition)",
  "version": "1.0",
  "description": "Blocks YouTube Shorts. Org edition for policy deployment, no GUI toggle.",
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "permissions": [
    "scripting",
    "tabs"
  ],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}